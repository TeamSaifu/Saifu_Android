<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".ui.home.sub_fragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/input_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:layout_weight="1"
            android:background="@drawable/button_ripple"
            android:foreground="@drawable/ic_baseline_edit_128"
            android:foregroundGravity="center"
            android:foregroundTintMode="src_in" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button4Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shurtcut_button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8sp"
                android:layout_weight="1"
                android:background="@drawable/shurtcut_button"
                android:text="Button"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/shurtcut_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8sp"
                android:layout_weight="1"
                android:background="@drawable/shurtcut_button"
                android:text="Button"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shurtcut_button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8sp"
                android:layout_weight="1"
                android:background="@drawable/shurtcut_button"
                android:text="Button"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/shurtcut_button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8sp"
                android:layout_weight="1"
                android:background="@drawable/shurtcut_button"
                android:text="Button"
                android:textSize="18sp"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
